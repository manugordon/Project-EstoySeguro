<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head', {title: 'Formulario de creación'}) %>

<body class="product-create">
	<%- include('./partials/header') %>
	<section class="create-section" >
		<div>				
			<h2>Creár un Seguro</h2>
		</div>
		<div class="create-form">
			<form action="/products/create/" method="POST">
				<div>
					<div>
						<label for="name">Nombre del producto:</label>
						<input id ="nombre" type="text" id="nombre" name="nombre" placeholder="Ej: Seguro para automoviles General" <% if(locals.oldData) { %> value="<%= oldData.nombre %>" <% } %>>
						<div class="validation-error" id="validation-error-nombre">
							<% if (locals.errors && errors.nombre) { %>
                                <span  >  <%= errors.nombre.msg %> </span>
                            <% } %>
						</div>
					</div>
					<div>
						<label for="price">Precio del producto:</label><br>
						<input type="text" id="precio" name="precio" placeholder="Ej: 5678">
						
					</div>
					<div>
						<label for="icono">Icono del producto:</label>
						<input type="text" id="icono" name="icono" placeholder="Ej: fa-fas-XX">
					</div>		
							
					<div>
						<label for="descripcion">Descipción:</label>
						<textarea id ="descripcion" name="descripcion" id="descripcion" <% if(locals.oldData) { %> value="<%= oldData.descripcion %>" <% } %>></textarea>
						<div class="validation-error" id="validation-error-descripcion">
							<% if (locals.errors && errors.descripcion) { %>
                                <span  >  <%= errors.descripcion.msg %> </span>
                            <% } %>
						</div>
					</div>
					<div>
						<label for="tipo">Tipo:</label>
						<select name="tipo" id="tipo" class="select-css">
							<option value="">Elegí</option>
							<option value="1">Automoviles</option>
							<option value="2">Seguros de Vida </option>
							<option value="3">Riesgo Civil </option>
							<option value="4">Riesgo de Trabajo </option>
							<option value="5">Incendio </option>
							<option value="6">Tecnologia </option>
							<option value="7">Riesgo Cibernético </option>
							<option value="8">Cauciones </option>
							<option value="9">Varios </option>
						</select>
					</div>
					<div>
						<label for="categoria">Categoría:</label>
						<select name="categoria" id="categoria" class="select-css">
							<option value="">Elegí</option>
							<option value="1">Oro</option>
							<option value="2">Platino </option>
							<option value="3">Zafiro </option>
						</select>
					</div>
					<div>
						<button id="button" type="submit" class="edit-button">CREAR</button>
					</div>
				</div>
			</form>
		</div>
	
	</section>
	<script src="/js/validatorCreateProduct.js"></script>
</body>	
</html>